<%- include("./partials/header.ejs") %>
<main class="section">
  <div class="container">
    <div class="columns mt-6">
      <div class="column is-half is-offset-one-quarter">
        <h1 class="title is-1">Sign Up</h1>
        <div class="box">
          <form action="/signup" method="post">
            <% if (locals.messages.errors) { %> 
              <% messages.errors.forEach( el => { %>
                <div class="notification is-danger"><%= el.msg %></div>
              <% }) %> 
            <% } %>
            <%- include("./partials/textInput.ejs", { name: "username", type: "text", label: "Username", help: "Must be at least 3 characters long" }) %>
            <%- include("./partials/textInput.ejs", { name: "email", type: "email", label: "Email" }) %>
            <%- include("./partials/textInput.ejs", { name: "password", type: "password", label: "Password", help: "Must be at least 8 characters long"}) %>
            <%- include("./partials/textInput.ejs", { name: "confirmPassword", type: "password", label: "Confirm Password" }) %>
            <%- button("submit") %>
          </form>
          <p>Already have an account? <a href="/login">Sign In</a></p>
        </div>
        <a href="/games">Enter as a guest</a>
      </div>
    </div>
  </div>
</main>
<%- include("./partials/footer.ejs") %>
