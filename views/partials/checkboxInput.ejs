<div class="field">
    <div class="control">
      <label for="<%- name %>" class="checkbox">
        <input 
          type="checkbox" 
          name="<%- name %>" 
          id="<%- name %>" 
          <% if (locals.checked) { %>
            checked="checked"
          <% } %>
        />
        <%= text %>
      </label>
    </div>
</div>