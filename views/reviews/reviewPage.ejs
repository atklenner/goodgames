<%- include("../partials/header.ejs") %> <%- include("../partials/navbar.ejs")
%>
<main class="container">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <div class="box">
        <div class="is-flex is-justify-content-space-between">
          <h1 class="title">
            <a href=<%- `/games/${review.game._id}` %>>
              <%= review.game.name %>
            </a> Review
          </h1>
          <%- editLikeButton(review, user, "review") %>
        </div>
        <p class="">
          Date Reviewed: <%= review.dateReviewed.toLocaleString() %>
        </p>
        <p class="">Rating: <%= review.rating %></p>
        <p class="">Completed: <%= review.completed %></p>
        <p class="">User: <%= review.user.username %></p>
        <p>Time Played: <%= review.timeSpentPlaying %></p>
        <p>Likes: <%= review.likes %></p>
        <p><%= review.body %></p>
      </div>
    </div>
  </div>
</main>
<%- include("../partials/footer.ejs") %>
